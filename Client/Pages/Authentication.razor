@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action" @ref="Child">
    <Registering>
        @if (Child?.ApplicationPaths.RemoteRegisterPath == null)
        {
            <span>Registration is not supported.</span>
        }
        else
        {
            <span>Checking login state...</span>
        }
    </Registering>
</RemoteAuthenticatorView>

@code {
    private RemoteAuthenticatorView? Child;

    [Parameter]
    public string? Action { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}

